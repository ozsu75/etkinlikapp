<div class="card h-100 etkinlik-kart">
    <img src="<%= etkinlik.kapakResmi || '/images/default-event.jpg' %>" class="card-img-top" alt="<%= etkinlik.baslik %>" style="height: 200px; object-fit: cover;">
    
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h5 class="card-title"><%= etkinlik.baslik %></h5>
            <span class="badge bg-<%= 
                etkinlik.durum === 'yayinda' ? 'success' : 
                etkinlik.durum === 'taslak' ? 'secondary' : 
                etkinlik.durum === 'iptal' ? 'danger' : 'info' 
            %>">
                <%= etkinlik.durum === 'yayinda' ? 'Yayında' : 
                    etkinlik.durum === 'taslak' ? 'Taslak' : 
                    etkinlik.durum === 'iptal' ? 'İptal' : 'Tamamlandı' 
                %>
            </span>
        </div>
        
        <p class="card-text text-muted">
            <small>
                <i class="fas fa-calendar-alt"></i> 
                <%= new Date(etkinlik.etkinlikTarihi).toLocaleDateString('tr-TR', { 
                    weekday: 'long', 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                }) %>
            </small>
        </p>
        
        <p class="card-text text-muted">
            <small>
                <i class="fas fa-map-marker-alt"></i> <%= etkinlik.konum %>
            </small>
        </p>
        
        <p class="card-text"><%= etkinlik.kisaAciklama || etkinlik.aciklama.substring(0, 100) + '...' %></p>
        
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                <% if (etkinlik.ucretli) { %>
                    <span class="badge bg-warning text-dark">₺<%= etkinlik.ucret %></span>
                <% } else { %>
                    <span class="badge bg-success">Ücretsiz</span>
                <% } %>
                
                <% etkinlik.kategoriler.slice(0, 2).forEach(kategori => { %>
                    <span class="badge bg-info ms-1"><%= kategori %></span>
                <% }) %>
            </div>
            
            <div>
                <span class="badge bg-light text-dark">
                    <i class="fas fa-users"></i> <%= etkinlik.katilimciSayisi %>
                    <% if (etkinlik.kontenjan) { %> / <%= etkinlik.kontenjan %> <% } %>
                </span>
            </div>
        </div>
    </div>
    
    <div class="card-footer bg-white">
        <div class="d-flex justify-content-between">
            <a href="/etkinlik/<%= etkinlik._id %>" class="btn btn-primary btn-sm">Detayları Gör</a>
            
            <div class="d-flex">
                <span class="badge bg-light text-dark me-2">
                    <i class="fas fa-heart"></i> <%= etkinlik.begeniSayisi %>
                </span>
                <span class="badge bg-light text-dark">
                    <i class="fas fa-comment"></i> <%= etkinlik.yorumSayisi %>
                </span>
            </div>
        </div>
    </div>
</div>